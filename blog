#!/bin/bash

source "/usr/local/bin/blog_module"

# Checks if entered action is valid, if not returns a helpful error.
if [ $# -eq 0 ]; then
	echo -e "An argument is mandatory, please run \"blog help\" for more info."
	exit 1
elif [ $1 == "read" ]; then
	blog_read "$1" "$2" "$3"
elif [ $1 == "write" ]; then
	blog_write "$1" "$2" "$3"
elif [ $1 == "edit" ]; then
	blog_edit "$1" "$2" "$3"
elif [ $1 == "delete" ]; then
	blog_delete "$1" "$2" "$3"
elif [ $1 == "backup" ]; then
	blog_backup "$1" "$2" "$3"
elif [ $1 == "publish" ]; then
	local_publish "$1" "$2" "$3"
elif [ $1 == "help" ]; then
	blog_help "$1" "$2" "$3"
else
	echo -e "You've entered an invalid argument, please run \"blog help\" for more info."
	exit 1
fi
